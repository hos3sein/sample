<body>

	<div class='container-fluid text-center' id="box">
		<form  action="/blog" method="post">
		<input type="text" id="box1" placeholder="first name:" name="firstname">
		<input type="text" id="box2" placeholder="last name:" name="lastname">
		<input type="text" id="box3" placeholder="email:" name="email">
