	</div>


	<div class="container-fluid text-center" id="pic">
		<!-- instagram -->

		<img id="insta" onmouseover="fn2(id)" onmouseleave=" fn3(id) " src="/instagram2.png">
		<!-- telegram -->
		<img id="telegram" onmouseover="fn2(id)"  onmouseleave=" fn3(id) " src="/telegram.png">
		<!-- github -->
		<img id="git" onmouseover="fn2(id)"  onmouseleave=" fn3(id) " src="/images.png">
		<!-- twiter -->
		<img id="twitter" onmouseover="fn2(id)"  onmouseleave=" fn3(id) " src="/twitter.png">
	</div>



	<script type="text/javascript">
		const fn = ()=>{
			const v = document.getElementById('box1')
			// console.log(v.value)
			window.location = 'save'
		}

		const fn2 = (id)=>{
			const v2 = document.getElementById(id)
			v2.style.boxShadow = "5px 10px 40px 10px blue";
		}

		const fn3 = (id)=>{
			const v3 = document.getElementById(id)
			v3.style.boxShadow='None'
		}

	</script>
